<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    android:layout_width="500dp"
    android:layout_height="500dp"
    android:clipChildren="false"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
	android:id="@+id/item_pager"
	>

    <com.github.ybq.android.spinkit.SpinKitView
        android:id="@+id/spin_kit"
        style="@style/SpinKitView.Large"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:fitsSystemWindows="true"
        android:indeterminate="true" />
	<info.hoang8f.widget.FButton
		android:layout_width="100dp"
		android:layout_height="50dp"
		android:text="@string/FButtonText"
		android:id="@+id/mainFButton"
		fbutton:buttonColor="@color/fbutton_color_emerald"
		fbutton:shadowColor="@color/fbutton_color_nephritis"
		fbutton:shadowEnabled="true"
		fbutton:shadowHeight="7dp"
		fbutton:cornerRadius="7dp"
	/>
</LinearLayout>
